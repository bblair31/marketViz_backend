# Development Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/marketviz_development
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=marketviz_development

# JWT Configuration (use a weak secret for development ONLY)
JWT_SECRET=dev_jwt_secret_change_in_production_min_32_chars

# Alpha Vantage API (use demo key or your own)
ALPHA_VANTAGE_API_KEY=demo

# CORS Configuration (allow local frontends)
CORS_ORIGIN=http://localhost:3001,http://localhost:3000,http://localhost:5173

# Rate Limiting (more lenient for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=debug
