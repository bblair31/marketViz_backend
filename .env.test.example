# Test Environment Configuration

# Server Configuration
NODE_ENV=test
PORT=3000

# Database Configuration (separate database for tests)
DATABASE_URL=postgresql://test_user:test_password@localhost:5432/marketviz_test

# JWT Configuration (can use a simple secret for tests)
JWT_SECRET=test_jwt_secret_min_32_characters_long_for_testing

# Alpha Vantage API (use demo key for tests)
ALPHA_VANTAGE_API_KEY=demo

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting (disabled or very high for tests)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10000

# Logging (minimal for tests)
LOG_LEVEL=error
